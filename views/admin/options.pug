extends ../layout

block adminNav
    include ../adminNav

block content

    script.
        $(function () {
            enableCBGroup();
            $("#scrollingText").click(enableCBGroup);
        });

        function enableCBGroup() {
            if ($("#scrollingText").is(":checked")) {
                $("input.textScrollMessage").attr("disabled", false);
            } else {
                $("input.textScrollMessage").attr("disabled", true);
            }
        }

    h1= title
    .container-fluid
        .row
            .col.col-md-1
            .col.col-md-5
                fieldset.optionPaneFieldset
                    .optionPane
                        form#submitOptions(action='/admin/options' method='post')
                            .row
                                .col.col-md-12
                                    h3 General Center Customization
                            .row
                                .col.col-md-12
                                    fieldset.form-group.centerChoiceRadioButtons
                                        div
                                            b Which center are you in?
                                                .row
                                                    .col.col-md-4
                                                        .form-check
                                                            label.form-check-label
                                                                input#centerRadioMLC.form-check-input(type='radio', name='centerLocation', value='MLC', checked=(centerLocation === "MLC"))
                                                                |  MLC
                                                        .form-check
                                                            label.form-check-label
                                                                input#centerRadioELC.form-check-input(type='radio', name='centerLocation', value='ELC', checked=(centerLocation === "ELC"))
                                                                |  ELC
                                                        .form-check
                                                            label.form-check-label
                                                                input#centerRadioHUBTutoringCenter.form-check-input(type='radio', name='centerLocation', value='TutoringCenter', checked=(centerLocation === "TutoringCenter"))
                                                                |  Tutoring Center
                                                    .col.col-md-4
                                                        .form-check
                                                            label.form-check-label
                                                                input#centerRadioSTEM.form-check-input(type='radio', name='centerLocation', value='STEM', checked=(centerLocation === "STEM"))
                                                                |  STEM
                                                        .form-check
                                                            label.form-check-label
                                                                input#centerRadioILC.form-check-input(type='radio', name='centerLocation', value='ILC', checked=(centerLocation === "ILC"))
                                                                |  ILC
                                                        .form-check
                                                            label.form-check-label
                                                                input#centerRadioHorticulture.form-check-input(type='radio', name='centerLocation', value='Horticulture', checked=(centerLocation === "Horticulture"))
                                                                |  Horticulture
                                                    .col.col-md-4
                                                        .form-check
                                                            label.form-check-label
                                                                input#centerRadioPE.form-check-input(type='radio', name='centerLocation', value='PE', checked=(centerLocation === "PE"))
                                                                |  PE
                                                        .form-check
                                                            label.form-check-label
                                                                input#centerRadioCTC.form-check-input(type='radio', name='centerLocation', value='CTC', checked=(centerLocation === "CTC"))
                                                                |  CTC
                                                        .form-check
                                                            label.form-check-labelequestsTable
                                                                input#centerRadioASC.form-check-input(type='radio', name='centerLocation', value='ASC', checked=(centerLocation === "ASC"))
                                                                |  ASC
                            .row
                                .col.col-md-12
                                    fieldset.form-group.centerOptionsCheckboxes
                                        div
                                            b Display Features
                                                .form-check
                                                    label.form-check-label
                                                        input.checkbox-input(type='checkbox' name='requestsTable' id='requestsTable' value='requestsTable' checked=requestsTable)
                                                        |  Enable request table
                                                .form-check
                                                    label.form-check-label
                                                        input.checkbox-input(type='checkbox' name='tutorTable' id='tutorTable' value='tutorTable' checked=tutorTable)
                                                        |  Enable tutor table
                            .row
                                .col.col-md-12
                                    fieldset.form-group.optionScrollingText
                                        .form-check
                                            label.form-check-label
                                                input.checkbox-input(type='checkbox' name='scrollingText' id='scrollingText' value='scrollingText' checked=scrollingText.enabled)
                                                |  Enable scrolling marquee
                                        label(for'scrollMsg') Scrolling text to display:
                                        |
                                        input#scrollMsg.textScrollMessage.form-control(type='text' name='message' value=scrollingText.text disabled='false')
                            .row
                                .col.col-md-12
                                    fieldset.form-group
                                        button.btn.btn-primary(type='submit') Apply Options
                                        if (done)
                                            div
                                                p Changes Made!
            .col.col-md-5
                fieldset.optionPaneFieldset
                    .optionPane
                        .row
                            .col-md-12
                                h3 Center-Specific Customizations
            .col.col-md-1