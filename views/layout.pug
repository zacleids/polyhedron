doctype html

html(lang='en')
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(name='description', content='Polyhedron: Tutoring center System application')
        meta(name='author', content='Polyhedral Visionaries')
        title Polyhedron

        // bootstrap and ajax
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css', integrity='sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp', crossorigin='anonymous')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js', integrity='sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa', crossorigin='anonymous')

        // local styling
        link(href='/stylesheets/style.css', rel='stylesheet')
    body(data-spy='scroll', data-target='.scrollspy')
        nav.navbar.navbar-inverse.navbar-fixed-top
            div.container
                div.navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbarContent', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    if (centerLocation)
                        a.navbar-brand.navLink(href='/tutorCenter') Polyhedral: #{centerLocation}
                    else
                        a.navbar-brand.navLink(href='/tutorCenter') Polyhedral
                div.navbar-collapse.collapse(id='navbarContent')
                    ul.nav.navbar-nav
                        if(centerLocation)
                            li
                                a.navLink(data-toggle='modal', data-target='#signInModal') Student Sign In
                        li
                            a.navLink(data-toggle='modal', data-target='#adminSignInModal') Admin Section
        div
            block adminNav
        div
            block content

        script.
            $(function () {
                toggleNickNameTF();
                $("#useNickNameCB").on("click", toggleNickNameTF);
            });

            function toggleNickNameTF() {
                if ($("#useNickNameCB").is(":checked")) {
                    $("input.nickName").attr("disabled", false);
                } else {
                    $("input.nickName").attr("disabled", true);
                }
            }

        #signInModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='signInModalLabel', aria-hidden='true')
            .modal-dialog
                .modal-content
                    .modal-header
                        button.close(type='button', data-dismiss='modal')
                            span(aria-hidden='true') &times;
                            |
                            span.sr-only Close
                        h4#signInModalLabel.modal-title  Welcome! Please Sign In
                    .modal-body
                        form(role='form')
                            .form-group
                                label(for='signInStudentID') Student ID
                                |
                                input#signInStudentID.form-control(type='text', placeholder='123456')
                            .form-group
                                label(for='nickName') Preferred Name
                                |
                                input#nickName.nickName.form-control(type='text', placeholder='Nickname (leave blank for real name)')
                            .checkbox
                                label
                                    input#useNickNameCB.useNickNameCB(type='checkbox')
                                    |  Use preferred name
                            |
                            button.btn.btn-primary(type='submit') Sign In

        #adminSignInModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='adminSignInModalLabel', aria-hidden='true')
            .modal-dialog
                .modal-content
                    .modal-header
                        button.close(type='button', data-dismiss='modal')
                            span(aria-hidden='true') &times;
                            |
                            span.sr-only Close
                        h4#adminSignInModalLabel.modal-title Please sign in to access the admin section
                    .modal-body
                        form(role='form')
                            .form-group
                                label(for='signInCabrilloID') Cabrillo ID
                                |
                                input#signInCabrilloID.form-control(type='text', placeholder='ex.: edbrau1234')
                            .form-group
                                label(for='adminSignInPassword') Password
                                |
                                input#adminSignInPassword.form-control(type='password', placeholder='Password')
                            |
                            button.btn.btn-primary(type='submit') Sign In
                    .modal-footer
                        form(action='/admin')
                            button.btn.btn-primary(type='submit') Dev: Straight To Admin
