        // returns list of students from database
        function getStudents() {
            $.ajax({
                type: 'get',
                url: 'http://localhost:3000/tutorCenter/REST/getStudents',
                dataType: 'json',
                data: {'center': '#{centerLocation}'},
                success: function (data, status) {
                    refreshStudentTable(data['students']);
                },
